<div class="form-row">
    <div class="form-item">
        <label for="username">User Name</label>
        <input type="text" name="username" value="<%= user.username %>" placeholder="Full Name">
    </div>
    <div class="form-item">
        <label for="name">Full Name</label>
        <input type="text" name="name" value="<%= user.name %>" placeholder="Username">
    </div>
    <% if (formType !== "update") { %>
        <div class="form-item">
            <label for="email">Email</label>
            <input type="email" name="email" value="<%= user.email %>" placeholder="User Email">
        </div>
        <div class="form-item">
            <label for="password">Password</label>
            <input type="password" name="password" value="<%= user.password %>" placeholder="User Password">
        </div>
        <div class="form-item">
            <label for="profileImage">User Profile Image</label>
            <input type="file" name="profileImage" value="<%= user.profileImage %>" placeholder="User Profile Image">
        </div>
    <% } %>
</div>