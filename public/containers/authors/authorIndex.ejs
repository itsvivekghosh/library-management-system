<h2 class="page-header">Search Author</h2>
<form action="/author" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label for="authorName">Author Name</label>
            <input type="text" name="authorName" placeholder="Search By Author Name..." value="<%= searchOptions.authorName %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>

<% authors.forEach(author => { %>
    <div>
        <div class="author-row">
            <div class="author-name"><%= author.authorName %></div>
            <div class="btn-row">
                <a class="btn btn-primary" href="/author/<%= author.id %>">View</a>
                <a class="btn btn-primary" href="/author/<%= author.id %>/update">Edit</a>
            </div>
        </div>
    </div>
<% }) %>