<div class="form-row">
    <div class="form-item">
        <label for="adminName">Admin Name</label>
        <input type="text" name="adminName" value="<%= admin.adminName %>" placeholder="Admin Name">
    </div>
    <div class="form-item">
        <label for="username">Admin User Name</label>
        <input type="text" name="username" value="<%= admin.username %>" placeholder="Admin Username">
    </div>
    <div class="form-item">
        <label for="email">Email</label>
        <input type="email" name="email" value="<%= admin.email %>" placeholder="Admin Email">
    </div>
    <div class="form-item">
        <label for="password">Password</label>
        <input type="password" name="password" value="<%= admin.password %>" placeholder="Admin Password">
    </div>
    <div class="form-item">
        <label for="adminProfileImage">Admin Profile Image</label>
        <input type="file" name="adminProfileImage" value="<%= admin.adminProfileImage %>" placeholder="Admin Profile Image">
    </div>
</div>